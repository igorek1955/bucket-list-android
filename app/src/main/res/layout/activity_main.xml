<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/text_view_app_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:fontFamily="sans-serif-black"
            android:text="Bucket List"
            android:textColor="#000000"
            android:textSize="24sp" />

        <androidx.cardview.widget.CardView
            android:id="@+id/card_view_things"
            android:layout_width="match_parent"
            android:layout_margin="35dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_view_app_title"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:elevation="5dp"
            app:cardCornerRadius="10dp">


            <ImageView
                android:id="@+id/image_view_things"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/things" />

            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/gradient_background" />

            <TextView
                android:id="@+id/text_view_things"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_margin="5dp"
                android:fontFamily="sans-serif-light"
                android:gravity="center"
                android:text="Things to do"
                android:textColor="@color/white"
                android:textSize="23sp" />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/card_view_places"
            android:layout_width="match_parent"
            android:layout_margin="35dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/card_view_things"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:elevation="5dp"

            app:cardCornerRadius="10dp">

            <ImageView
                android:id="@+id/image_view_places"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:scaleType="centerCrop"
                android:src="@drawable/places" />

            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/gradient_background" />

            <TextView
                android:id="@+id/text_view_places"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_margin="5dp"
                android:fontFamily="sans-serif-light"
                android:gravity="center"
                android:text="Places to go"
                android:textColor="@color/white"
                android:textSize="23sp" />
        </androidx.cardview.widget.CardView>
    </RelativeLayout>

</ScrollView>